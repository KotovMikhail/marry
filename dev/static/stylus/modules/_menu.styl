.header-nav__list
	position absolute
	top 80px
	left 0
	z-index 1
	display none
	min-width 200px

.header-nav__link
	display block
	padding 15px 15px 15px 20px
	color mainColor
	border-bottom 1px solid mainColor
	transition all linear .2s
	background-color white

	&:hover
