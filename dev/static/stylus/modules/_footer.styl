footer 
	padding 20px 0
	background #000

	.container
		position relative
		width 100%
		max-width 1170px
		margin 0 auto
		padding 0 10px

.footer-content
	display flex
	width 100%
	max-width 960px
	margin 0 auto 20px
	padding 0 10px
	justify-content space-between
	align-items center
	flex-wrap wrap

.footer-copyright
	width 100%
	text-align center
	color #898989

	a
		color #898989
		text-decoration underline


.footer-logo
	margin-right 20px

	img 
		max-width 100px

.footer-phone
	margin-right 50px
	a
		position relative
		display block
		margin-bottom 5px
		padding-left 25px
		font-family 'PTSansBold',Arial,sans-serif
		font-size 20px
		color #fff

		&:before
			position absolute
			left 0
			display block
			width 15px
			height 15px
			content ''

.footer-phone--city
	&:before
		background url(../img/svg/phone.svg) 0 0 no-repeat
		background-size 100%

.footer-phone--mobile
	&:before
		background url(../img/svg/phone-mobile.svg) 0 0 no-repeat
		background-size 100%

.footer-about 
	font-size 16px
	max-width 230px
	margin-right 30px
	color #898989

	span 
		display block

	.footer-company__name
		font-size 16px
		font-family 'PTSansBold',Arial,sans-serif
		margin-bottom 5px
		text-transform uppercase

.footer-social
	li
		display inline-block
		margin-right 10px

		&:last-child
			margin-right 0

.footer-social__link 
	display block
	width 50px
	height 50px
	border-radius 50%

.footer-social__link--vk 
	background url('../img/general/icons/vk.png') 0 0 no-repeat

.footer-social__link--instagram 
	background url('../img/general/icons/instagram.png') 0 0 no-repeat

.footer-social__link--fb 
	background url('../img/general/icons/fb.png') 0 0 no-repeat

.footer-social__link--wp 
	background url('../img/general/icons/wp.png') 0 0 no-repeat

.footer-social__link--youtube 
	background url('../img/general/icons/youtube.png') 0 0 no-repeat
