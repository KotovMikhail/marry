.popup-form
	position relative
	width 90%
	margin 0 auto
	max-width 360px

	.mfp-close
		display none

#close-popup
	position absolute
	z-index 5
	background-color mainColor
	color #ffffff
	font-size 32px
	text-align center
	width 50px
	height 50px
	border 1px solid #ffffff
	border-radius 50%
	right -20px
	top -20px
	padding-top 3px
	cursor pointer
