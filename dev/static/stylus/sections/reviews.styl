.reviews
	height 880px
	background url('../img/general/reviews-bg.jpg') 0 0 no-repeat
	background-size cover

	&:before
		position absolute
		z-index 1
		top -20px
		right 0
		left 0
		display block
		height 20px
		content ''
		background url(../img/general/wave-top-reviews.png) 0 0 repeat-x

	&:after
		position absolute
		z-index 1
		right 0
		bottom 0
		left 0
		display block
		height 20px
		content ''
		background url('../img/general/wave-bottom-white.png') 0 0 repeat-x

.reviews-slider
	position relative
	padding 0 110px

	.slick-dots
		z-index 10
		
		li
			button
				border 1px solid white
				border-radius 50%

				&:before
					display none	

			&.slick-active
				button
					background-color #fff

.reviews-slider__controls
	position absolute
	top 50%
	z-index 10
	margin-top -22px
	width 44px
	height 44px
	cursor pointer

.reviews-slider__next 
	right -10px
	background url('../img/svg/arrow-right.svg') 0 0 no-repeat
	background-size 100%

.reviews-slider__prev 
	left -10px
	background url('../img/svg/arrow-left.svg') 0 0 no-repeat
	background-size 100%	

.review-item 
	display flex
	justify-content space-between
	width 100%
	max-width 460px
	height 305px
	margin-bottom 30px
	padding 30px 20px 40px
	color #007558
	border-radius 10px
	background #fff url('../img/general/review-bg.jpg') right bottom no-repeat

.review-author 
	margin-right 15px
	text-align center
	flex 1 auto

.review-text
	font-size 15px
	font-style italic
	line-height 1.2
	flex 2 auto

	p
		margin-bottom 15px

.review-photo 
	overflow hidden
	width 140px
	height 140px
	margin 0 auto 20px
	border-radius 50%

.review-author__name 
	display block
	font-family 'PTSansBold',Arial,sans-serif
	font-size 24px
	margin-bottom 5px

.review-date 
	display block
	margin-top 15px


.review-photo--1 
	background url('../img/content/reviews/review1.jpg') 0 0 no-repeat

.review-photo--2 
	background url('../img/content/reviews/review2.jpg') 0 0 no-repeat

.review-photo--3 
	background url('../img/content/reviews/review3.jpg') 0 0 no-repeat

.review-photo--4
	background url('../img/content/reviews/review4.jpg') 0 0 no-repeat




