.services
	color#ffffff
	background url('../img/general/services-bg.jpg') 0 0 repeat-x
	background-size cover

	.g-section-title
		width 100%

	.g-section-title--white
		color#ffffff

	&:before
		position absolute
		right 0
		top 0
		left 0
		display block
		height 21px
		content ''
		background url('../img/general/wave-top-white.png') 0 0 repeat-x

	.container
		display flex
		flex-wrap wrap
		justify-content center

.service-item
	position relative
	width 40%
	min-height 165px
	margin 0 15px 50px
	padding-left 175px
	flex-basis auto

	&.service-item--center
		width 30%

	&:before
		content ''
		position absolute
		left 0
		display block
		width 165px
		height 165px
		background-size 100%

.service-item--organization

	&:before
		background url('../img/content/services/organization.png') 0 0 no-repeat 
		background-size 100%

.service-item--master

	&:before
		background url('../img/content/services/master.png') 0 0 no-repeat 
		background-size 100%

.service-item--photo

	&:before
		background url('../img/content/services/photo.png') 0 0 no-repeat 
		background-size 100%

.service-item--dekor

	&:before
		background url('../img/content/services/dekor.png') 0 0 no-repeat 
		background-size 100%

.service-item--banket

	&:before
		background url('../img/content/services/banket.png') 0 0 no-repeat 
		background-size 100%

.service-item--registration

	&:before
		background url('../img/content/services/registration.png') 0 0 no-repeat 
		background-size 100%

.service-item--artist

	&:before
		background url('../img/content/services/artist.png') 0 0 no-repeat 
		background-size 100%

.service-item__title
	font-family boldFont
	font-size 24px
	display block
	margin-bottom 10px

.service-item__text
	line-height 1.2

