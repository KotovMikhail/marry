.portfolio
	height 1160px
	margin-top -20px
	color #ffffff
	background url('../img/general/portfolio-bg.jpg') 0 0 repeat-x
	background-size cover

	&:before
		position absolute
		z-index 1
		right 0
		top -19px
		left 0
		display block
		height 20px
		content ''
		background url('../img/general/wave-top-portfolio.png') 0 0 repeat-x

	&:after
		position absolute
		z-index 1
		right 0
		bottom -20px
		left 0
		display block
		height 20px
		content ''
		background url('../img/general/wave-bottom-portfolio.png') 0 0 repeat-x

.portfolio-item__wrap
	width 100%
	max-width 975px
	margin 0 auto

.portfolio-item__line
	display flex

.portfolio-item__center
	position relative
	display flex
	flex-wrap wrap

.portfolio-item
	position relative
	width 292px
	height 230px
	background-size cover
	cursor pointer

	&.portfolio-item--width
		width 390px

	&.portfolio-item--height
		position absolute
		top 0
		right 1px
		height 460px


	&:hover
		.portfolio-item__descr
			opacity 1

.portfolio-item-search
	position absolute
	z-index 1
	right 10px
	bottom 10px
	width 25px
	height 25px
	border 1px solid #fff
	border-radius 50%
	background-color #007558

	&:after
		position absolute
		top 5px
		left 5px
		display block
		width 12px
		height 12px
		content ''
		background url('../img/svg/search.svg') 0 0 no-repeat
		background-size 100%

.portfolio-item__descr
	position absolute
	right 0
	bottom 0
	left 0
	padding 15px 40px 15px 10px
	transition all linear .2s
	text-align right
	opacity 0
	color #fff
	background-color #007558

.portfolio-instagramm
	margin-top 20px
	text-align center
	color mainColor
	font-size 28px


.portfolio-item a 
	display block
	width 100%
	height 100%
