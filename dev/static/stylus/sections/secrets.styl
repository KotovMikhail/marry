.secrets 
	color #fff
	background url('../img/general/secrets-bg.jpg') 0 0 no-repeat
	background-size cover
		
	&:before
		position absolute
		top 0
		right 0
		left 0
		display block
		height 21px
		content ''
		background url('../img/general/wave-top-white.png') 0 0 repeat-x

.secrets-content 
	display flex
	width 100%
	max-width 960px
	margin 0 auto
	flex-wrap wrap
	justify-content space-between
	align-items center

	.g-section-title
		width 100%
		margin-bottom 70px

.secrets-text 
	max-width 450px

	.secrets-text__title
		font-family boldFont
		display block
		margin-bottom 10px
		font-size 28px

	p
		font-size 28px
		line-height 1.2
		margin-bottom 20px

.secrets-list
	li
		font-family mainFont
		font-size 28px
		margin-bottom 25px
		line-height 1.2

		&:last-child
			margin-bottom 0


.form
	display flex
	align-items center
	padding 50px 25px 35px
	max-width 360px
	color mainColor
	border-radius 15px
	background-color #fff
	text-align center

	form
		display block

.form-title 
	font-size 28px
	line-height 1.3
	margin-bottom 30px
	
.form-group 
	position relative
	margin-bottom 25px

	&.form-group--phone
		margin-bottom 40px

.form-group--icon 
	&:before
		position absolute
		top 12px
		left 10px
		display block
		width 15px
		height 15px
		content ''

	&.form-group--phone
		&:before
			background url('../img/svg/phone-gray.svg') 0 0 no-repeat
			background-size 100%


	&.form-group--name
		&:before
			background url('../img/svg/user.svg') 0 0 no-repeat
			background-size 100%

.g-input 
	line-height 38px
	width 100%
	height 40px
	margin-bottom 5px
	padding 0 10px 0 30px
	border 1px solid #898989
	border-radius 5px

	&.error
		border-color red
